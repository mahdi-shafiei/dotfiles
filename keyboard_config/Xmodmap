!based on https://gist.github.com/jondlm/11277197

! Swap right control and right alt
remove Control = Control_R
remove Mod1 = Alt_R
keycode 105 = Alt_R
keycode 108 = Control_R
add Control = Control_R
add Mod1 = Alt_R

! Make PrtSc super key
keycode 107 = Super_R
add mod4 = Super_R

! Make lock super key
clear Lock
keycode 9 = Caps_Lock NoSymbol Caps_Lock
keycode 66 = Escape NoSymbol Escape

! Exchange left Alt and left Win
remove mod1 = Alt_L
remove mod4 = Super_L
add mod1 = Super_L
add mod4 = Alt_L

!$ xmodmap ~/.Xmodmap
